<% provide(:title, 'New Agent') %>
<h1>New <%= @agent.branch.estate_agent.name %> - <%= @agent.branch.name %> Agent</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@agent, url: branch_agents_path, html: { :method => :post }) do |f| %>
      <%= render 'shared/agent_error_messages' %>
      
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :comment %>
      <%= f.text_field :comment %>      

      <%= f.submit "Create agent", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>