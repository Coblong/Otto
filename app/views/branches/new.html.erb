<% provide(:title, 'New Branch') %>
<h1>New <%= @branch.estate_agent.name %> Branch</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@branch, url: estate_agent_branches_path, html: { :method => :post }) do |f| %>
      <%= render 'shared/branch_error_messages' %>
      
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :comment %>
      <%= f.text_field :comment %>

      <%= f.submit "Create branch", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>