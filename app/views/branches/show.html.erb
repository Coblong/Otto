<% provide(:title, @branch.name) %>
<div id="left-nav" class="tall">  
  <%= render 'shared/properties' %>
</div>
<div id="main"> 
  <div id="main-top">   
    <div id="main-top-details">
      <%= link_to @branch.estate_agent.name, @branch.estate_agent %> / <%= @branch.name %>
      <%= @branch.comment %><p>        
      <% if @branch.agents.any? %>      
        <table class="children">
          <tr>
            <th>Agent</th>            
            <th>Properties</th>
          </tr>          
        <% @branch.agents.each do |agent| %>
            <tr class="light">
              <td><%= link_to agent.name, agent %></td>
              <td><%= agent.properties.count %></td>
            </tr>
        <% end %>  
        </table>
      <% end %>
    </div>
  </div>
  </div>
</div>
