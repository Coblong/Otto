<% provide(:title, "Sign un") %>
<div class="container">
  <div class="welcome-inner">
    <%= form_for(@user) do |f| %>
      <h2>Sign un for Ottor<h2>        
      <%= render 'shared/error_messages', obj: @user %>
      <table class="settings-form">
        <tr>
          <td><%= f.label :name %></td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td><%= f.label :email %></td>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <td><%= f.label :password %></td>
          <td><%= f.password_field :password %></td>
        </tr>        
        <tr>
          <td><%= f.label :password_confirmation, "Confirmation" %></td>
          <td><%= f.password_field :password_confirmation %></td>
        </tr>
        <tr><td>&nbsp;</td></tr>
        <tr>
          <td colspan="2"><%= f.submit "Create my account", class: "btn btn-large btn-primary" %></td>
        </tr>
    <% end %>
  </div>
</div>